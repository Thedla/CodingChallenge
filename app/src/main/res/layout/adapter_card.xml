<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="cardWrapper"
            type="com.codingChallenge.ui.CardWrapper" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:setImageUrl="@{cardWrapper.getImagePath}"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_card"
            tools:text="Tittle"
            tools:textSize="18sp"
            android:text="@{cardWrapper.getTitle}"
            android:textColor="@{cardWrapper.getTitleTextColor}"
            android:textSize="@{cardWrapper.getTitleTextSize}"
            app:layout_constraintBottom_toTopOf="@id/title_desc_card"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/dp_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_desc_card"
            tools:text="Tittle Description"
            tools:textSize="12sp"
            android:text="@{cardWrapper.getDescription}"
            android:textColor="@{cardWrapper.getDescriptionTitleColor}"
            android:textSize="@{cardWrapper.getDescriptionTitleSize}"
            android:layout_marginLeft="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/dp_8"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>